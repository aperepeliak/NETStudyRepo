@model IEnumerable<ST.Core.Models.Skill>

<div id="skills">
    <table class="table table-bordered">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>Actions</th>
        </tr>

        @foreach (var skill in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => skill.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => skill.Category.Name)
                </td>
                <td>
                    <a class="action" href="@Url.Action("Edit", new { id = skill.Id })">
                        <span class="glyphicon glyphicon-edit"></span> |
                    </a>
                    <a class="action" href="@Url.Action("Details", new { id = skill.Id })">
                        <span class="glyphicon glyphicon-info-sign"></span> |
                    </a>
                    <a class="action" href="@Url.Action("Delete", new { id = skill.Id})">
                        <span class="glyphicon glyphicon-trash"></span>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>

